<div class="container">
<%= form_with(model: solicitud, local: true) do |form| %>
  <% if solicitud.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(solicitud.errors.count, "error") %> prohibited this solicitud from being saved:</h2>

      <ul>
      <% solicitud.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-4">
      <div class="field">
        <%= form.label :nombre, "Nombre(s)" %>
        <%= form.text_field :nombre, id: :solicitud_nombre %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="field">
        <%= form.label :ap, "Apellidos" %>
        <%= form.text_field :ap, id: :solicitud_ap %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="field">
        <%= form.label :edad, "Edad" %>
        <%= form.number_field :edad, id: :solicitud_edad %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="field">
        <%= form.label :direccion, "Dirección" %>
        <%= form.text_field :direccion, id: :solicitud_direccion %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="field">
        <%= form.label :telefono, "Teléfono" %>
        <%= form.number_field :telefono, id: :solicitud_telefono %>
      </div>
    </div>
  </div>  

  <div class="row">
    <div class="col-md-4">
      <div class="field">
        <%= form.label :email, "Correo (si no tiene escribir: Sin Correo)" %>
        <%= form.text_field :email, id: :solicitud_email %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="field">
        <%= form.label :programa, "Elija el programa que solicita" %>
        <%= form.select :programa, options_for_select([["Proyecto de Semilla", "Proyecto de Semilla"], ["Gente emprendedora", "Gente emprendedora"], ["Produccion de Maiz", "Produccion de Maiz"], ["Proyectos de fertilizantes", "Proyectos de fertilizantes"]]) %>
      </div>
    </div>
  </div>  
  
  <div class="row">
    <div class="col-md-12">
      <%= form.submit %>
    </div>
  </div>
  
<% end %>
</div>