<h1>Solicitudes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= link_to "ID", :sort => "id" %></th>
      <th><%= link_to "Nombre", :sort => "nombre" %></th>
      <th><%= link_to "Apellidos", :sort => "ap" %></th>
      <th><%= link_to "Edad", :sort => "edad" %></th>
      <th><%= link_to "Dirección", :sort => "direccion" %></th>
      <th><%= link_to "Teléfono", :sort => "telefono" %></th>
      <th><%= link_to "Correo", :sort => "email" %></th>
      <th><%= link_to "Programa", :sort => "programa" %></th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @solicituds.each do |solicitud| %>
      <tr>
        <td><%= solicitud.id %></td>
        <td><%= solicitud.nombre %></td>
        <td><%= solicitud.ap %></td>
        <td><%= solicitud.edad %></td>
        <td><%= solicitud.direccion %></td>
        <td><%= solicitud.telefono %></td>
        <td><%= solicitud.email %></td>
        <td><%= solicitud.programa %></td>
        <td><%= link_to 'Ver', solicitud, class:'btn btn-primary white' %></td>
        <td><%= link_to 'Editar', edit_solicitud_path(solicitud), class:'btn btn-success white' %></td>
        <td><%= link_to 'Eliminar', solicitud, method: :delete, class:'btn btn-danger white', data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Solicitud', solicitar_path, class:'btn btn-primary btn-lg white' %>
<p>Download:</p>
  <%= link_to "Excel", solicituds_path(format: "xls") %>